{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2018",
    "outDir": "build",
    "lib": [
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.Intl",
      "ESNext.Symbol",
      "DOM"
    ],
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitReturns": false,
    "strictNullChecks": false
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}

